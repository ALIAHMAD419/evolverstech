<p id="notice"><%= notice %></p>

<div class="sp1">
  <h1  class="table-dark col-md-4 offset-md-4 text-center">Appointment</h1>
  <%= render partial: 'form' %>
  <br><br>
  <h2 class="text-center">HERE IS ALL THE LIST OF THE RECORDS OF APPOINTMENTS</h2>

  <table class="table table-striped table-dark table-hover text-center col-md-10 offset-md-1">
    <tr>
      <th>#</th>
      <th>DOCTOR</th>
      <th>PATIENT</th>
      <th>CHECK_UP_FOR</th>
      <th>ROOM</th>
      <th>START_TIME</th>
      <th>END_TIME</th>
      <th colspan="3">FUNCTIONS</th>
    </tr>
   
    <% @appointment.each do |appointment| %>
      <tr>
        <td><%= appointment.id %></td>
        <td><%= appointment.doctor.name %></td>
        <td><%= appointment.patient.name %></td>
        <td><%= appointment.doctor.spec %></td>
        <td><%= appointment.room.room %></td>
        <td><%= appointment.start_time %></td>
         <td><%= appointment.end_time %></td>
          <td><%= link_to 'Show', doctor_appointment_path(appointment), method: :GET %></td>
          
      </tr>
  <% end %>

  </table>

  <br>
  <div class="row text-center ">  
    <div class="col-md-1"> 
      <%= link_to 'BACK', welcome_index_path,class: "btn btn-outline-dark btn-lg " %>
    </div>
  </div>
</div>

