<div class="col-md-5 offset-md-5">
  <%= form_for [:clerk, @appointment] do |f| %>
    <% if appointment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>
        <ul>
        <% appointment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div>
    <%= f.label :DOCTORS %>
    <%= f.select :doctor_id, Doctor.all.collect { |d| [ d.name, d.id ] } %>
    <%= f.label :PATIENTS %>
    <%= f.select :patient_id, Patient.all.collect { |p| [ p.name, p.id ] } %>
  </div>
    <%= f.label :START_TIME %>
    <%= f.datetime_select :start_time, class: 'form-control' %>
      <%= f.label :END_TIME %>
    <%= f.datetime_select :end_time, class: 'form-control' %>
  <br> <br>
  <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
