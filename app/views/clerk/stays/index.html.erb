<p id="notice"><%= notice %></p>
<div class="sp1">

  <h1 class="table-dark col-md-4 offset-md-4 text-center">Stays</h1>
  <div class="col-md-5">  
    <h5 class="table-dark col-md-9">LOGGIN CLERK : <%= current_clerk.email%></h5> 
    <br>  
    <%= link_to 'New patient stay', new_clerk_stay_path,class: "btn btn-outline-dark " %>
    <br>
    <br>  
    <%= link_to 'Exsisting patient stay', np_clerk_stays_path ,class: "btn btn-outline-dark "%>
    <br>
  </div>
  <h2 class="text-center">HERE IS ALL THE LIST OF THE RECORDS OF STAYS</h2>
   <table class="table table-striped table-dark table-hover text-center col-md-10 offset-md-1">
    <tr>
      <th>#</th>
      <th>NAME</th>
      <th>DOCTOR</th>
      <th>DEPARTMENT</th>
      <th>WARD</th>
      <th>ADMITTED_TIME</th>       
      <th>DISCARGE_TIME</th>
      <th colspan="3">FUNCTIONS</th>
    </tr>
   
    <% @stay.each do |stay| %>
      <tr>
              
        <td><%= stay.id %></td>
        <td><%= stay.patient.name %></td>
        <td><%= stay.doctor.name %></td>
        <td><%= stay.ward.department.name %></td>
        <td><%= stay.ward.wards_name %></td>
        <td><%= stay.a_time %></td>    
        <td><%= stay.d_time %></td>

        
          <td><%= link_to 'Show', clerk_stay_path(stay), method: :GET %></td>
          <td><%= link_to 'Edit', edit_clerk_stay_path(stay) %></td>
          <td><%= link_to 'Destroy', clerk_stay_path(stay), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </table>

  <br>

  <div class="row text-center ">  
      <div class="col-md-1">  
        <%= link_to 'Back', welcome_index_path, class: "btn btn-outline-dark btn-lg" %> 
      </div>
          <div class="col-md-1">  
          <% if clerk_signed_in? %>
            <%= link_to('Logout', destroy_clerk_session_path, method: :delete ,class: "btn btn-outline-dark btn-lg") %> 
          <% else %>
            <li>
            <%= link_to('Login', new_clerk_session_path ,class: "btn btn-outline-dark btn-lg") %>  
            </li>
          <% end %>
        </div> 
      </div>
</div>
