<%= form_for [:clerk,@patient]  do |form| %>
 <div class="col-md-5 offset-md-5">
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :NAME %><br>
    <%= form.text_field :name, autofocus: true , placeholder: "Name" %>
  </p>
  <p>
    <%= form.label :AGE %><br>
    <%= form.select :age ,(18..40),include_blank: true %>
  </p>
  <p>
    <%= form.label :WEIGHT %><br>
    <%= form.select :weight,(1..200),include_blank: true %>
  </p>
  <p>
    <%= form.label :DISEASE %><br>
    <%= form.text_field :dis , placeholder: "DISEASE" %>
  </p>
  <div>
    <%= form.label :PHONE %>
    <%= form.text_field :phone , placeholder: "PHONE" %>
  </div>
  <div>
    <%= form.label :ADDRESS %>
    <%= form.text_field :address , placeholder: "HOME#BLOCK#CITY" %>
  </div>
   <div class="field">
    <%= form.label :email %><br>
    <%= form.email_field :email,autocomplete: "email" , placeholder: "User@patient.com" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br>
    <%= form.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "Confirm Password" %>
  </div><br>
   <div class="actions">
      <%= form.submit class: "btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
