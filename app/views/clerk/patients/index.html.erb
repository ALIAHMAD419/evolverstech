<p id="notice"><%= notice %></p>

<div class="sp1">

  <h1 class="table-dark col-md-4 offset-md-4 text-center">Patients</h1>
    
    <div class="col-md-5">  
      <h5 class="table-dark col-md-9">LOGGIN CLERK : <%= current_clerk.email%></h5> 
      <br>
        <%= link_to 'New patient', new_clerk_patient_path ,class: "btn btn-outline-dark btn-lg" %>
      <br>
    </div>
  <h2 class="text-center">HERE IS ALL THE LIST OF THE RECORDS OF PATIENTS</h2><br>


   
   <table  class="table table-striped table-dark table-hover text-center  col-md-10 offset-md-1">
    <tr>
      <th>#</th>
      <th>NAME</th>
      <th>AGE</th>
      <th>WEIGHT</th>
      <th>DISEASE</th>
      <th>PHONE</th>
      <th>ADDRESS</th>
      <th>EMAIL</th>
      <th colspan="3">FUNCTIONS</th>

    </tr>
   
    <% @patient.each do |patient| %>
      <tr>
        <td><%= patient.id %></td>
        <td><%= patient.name %></td>
        <td><%= patient.age %></td>
        <td><%= patient.weight %></td>
        <td><%= patient.dis %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.address %></td>
        <td><%= patient.email %></td>
          <td><%= link_to 'Show', clerk_patient_path(patient), method: :GET %></td>
          <td><%= link_to 'Edit', edit_clerk_patient_path(patient) %></td>
          <td><%= link_to 'Destroy', clerk_patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </table>

  <br>

  <div class="row text-center ">  
      <div class="col-md-1">  
        <%= link_to 'Back', welcome_index_path, class: "btn btn-outline-dark btn-lg" %> 
      </div>
          <div class="col-md-1">  
          <% if clerk_signed_in? %>
            <%= link_to('Logout', destroy_clerk_session_path, method: :delete ,class: "btn btn-outline-dark btn-lg") %> 
          <% else %>
            <li>
            <%= link_to('Login', new_clerk_session_path ,class: "btn btn-outline-dark btn-lg") %>  
            </li>
          <% end %>
        </div> 
      </div>
      
  </div>
</div>
