<div class="col-md-5 offset-md-5">
  <%= form_for [:clerk, @appointment] do |f| %>
    <% if appointment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>
        <ul>
          <% appointment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= f.label :DOCTORS %>
      <%= f.select :doctor_id, Doctor.all.collect { |d| [ d.name, d.id ] } %><br>
      <%= f.label :PATIENTS %>
      <%= f.select :patient_id, Patient.all.collect { |p| [ p.name, p.id ] } %>
    </div>
    <br>
      <%= f.label :START_TIME %>
      <%= f.datetime_select :start_time,ampm: true ,add_month_numbers: true, :start_year => Date.current.year,
      :end_year => Date.current.year + 2  , class: 'form-control' %>
    <br>
      <%= f.label :END_TIME %>
      <%= f.datetime_select :end_time, ampm: true ,add_month_numbers: true, :start_year => Date.current.year, :end_year => Date.current.year + 2 , class: 'form-control' %>
    <br>
    <div class="actions">
      <%= f.submit class: "btn btn-outline-dark" %>
    </div>
  <% end %>
</div>
