<p id="notice"><%= notice %></p>

<div class="sp1">

  <h1  class="table-dark col-md-4 offset-md-4 text-center">Appointment</h1>
  <div class="col-md-5">  
    <br>
      <%= link_to 'New appointment', new_clerk_appointment_path, class: "btn btn-outline-dark btn-lg " %>
    <br>
  </div>
  <h2 class="text-center">HERE IS ALL THE LIST OF THE RECORDS OF APPOINTMENTS</h2><br>
   
   <table class="table table-striped table-dark table-hover text-center col-md-10 offset-md-1">
    <tr>
      <th>#</th>
      <th>DOCTOR</th>
      <th>PATIENT</th>
      <th>CHECK_UP_FOR</th>
      <th>FEES</th>
      <th>EXAMINATION ROOM</th>
      <th>START_TIME</th>
      <th>END_TIME</th>
      <th colspan="3">FUNCTIONS</th>
    </tr>
   
    <% @appointment.each do |appointment| %>
      <tr>
        <td><%= appointment.id %></td>
        <td><%= appointment.doctor.name %></td>
        <td><%= appointment.patient.name %></td>
        <td><%= appointment.doctor.spec %></td>
        <td><%= appointment.doctor.fees %></td>
        <td><%= appointment.room.room %></td>
        <td><%= appointment.start_time %></td>
        <td><%= appointment.end_time %></td>
        <td><%= link_to 'Show', clerk_appointment_path(appointment), method: :GET %></td>
        <td><%= link_to 'Edit', edit_clerk_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', clerk_appointment_path(appointment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </table>
  <br>
  <div class="row text-center ">  
    <div class="col-md-1">  
      <%= link_to 'Back', welcome_index_path, class: "btn btn-outline-dark btn-lg" %> 
    </div>   
  </div>

</div>
