<p id="notice"><%= notice %></p>

<div class="sp1">
  
  <h1 class="table-dark col-md-4 offset-md-4 text-center">Doctors</h1>
  <div class="col-md-5">  
    <br>    
      <%= link_to 'New Doctor', new_clerk_doctor_path, class: "btn btn-outline-dark btn-lg" %>
    <br>
  </div>
  <h2 class="text-center ">HERE IS ALL THE LIST OF THE RECORDS OF DOCCTORS</h2>


   
   <table class="table table-striped table-dark table-hover text-center col-md-10 offset-md-1">
    <thead>
      <tr>
        <th>#</th>
        <th>NAME</th>
        <th>SPECIALITY</th>
        <th>DEPARTMENT</th>
        <th>FEES</th>
        <th>TIME</th>
        <th colspan="3">FUNCTIONS</th>
      </tr>
    </thead> 
      <% @doctor.each do |doctor| %>
        <tr>
          <td><%= doctor.id %></td>
          <td><%= doctor.name %></td>
          <td><%= doctor.spec %></td>
          <td><%= doctor.department.name %></td>
          <td><%= doctor.fees %></td>
          <td><%= doctor.hours %></td>
           <td><%= link_to 'Show', clerk_doctor_path(doctor), method: :GET %></td>
            <td><%= link_to 'Edit', edit_clerk_doctor_path(doctor) %></td>
            <td><%= link_to 'Destroy', clerk_doctor_path(doctor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
  </table>

  <br>
  <div class="row text-center ">  
    <div class="col-md-1">  
        <%= link_to 'BACK', welcome_index_path, class: "btn btn-outline-dark btn-lg" %>
    </div>
     
    
  </div>
</div>
