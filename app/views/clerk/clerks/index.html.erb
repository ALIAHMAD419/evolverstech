<div class="sp1">
  
  <h1 class="table-dark col-md-4 offset-md-4 text-center">Clerks</h1>
  <div class="col-md-5">  
    <br>
      <%= link_to 'New Clerk', new_clerk_clerk_path, class: "btn btn-outline-dark btn-lg "  %>
    <br>
  </div>
  <h2 class="text-center ">HERE IS ALL THE LIST OF THE RECORDS OF CLERKS</h2>
  <br>
   <table class="table table-striped table-dark table-hover text-center col-md-10 offset-md-1" >
    <thead>
      <tr>
        <th>#</th>
        <th>NAME</th> 
        <th>TIME</th>
        <th>AGE</th>
        <th colspan="3" >FUNCTIONS</th>
      </tr>
   </thead>
   
    <% @clerk.each do |clerk| %>
      <tr>
        <td><%= clerk.id %></td>
        <td><%= clerk.name %></td>
        <td><%= clerk.time %></td>
        <td><%= clerk.age %></td>
          <td><%= link_to 'Show', clerk_clerk_path(clerk), method: :GET %></td>
          <td><%= link_to 'Edit', edit_clerk_clerk_path(clerk) %></td>
          <td><%= link_to 'Destroy', clerk_clerk_path(clerk), method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </table>

  <br>

    <div class="row text-center ">  
      <div class="col-md-1">  
        <%= link_to 'Back', welcome_index_path, class: "btn btn-outline-dark btn-lg" %> 
      </div>
         
  </div>
</div>
