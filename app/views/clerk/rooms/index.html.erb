<p id="notice"><%= notice %></p>
<div class="sp1">
  <h1  class="table-dark col-md-4 offset-md-4 text-center">Rooms</h1>
  <div class="col-md-5">  
    <br>
      <%= link_to 'New room', new_clerk_room_path ,class: "btn btn-outline-dark btn-lg "%>
    <br>
  </div>
  <h2 class="text-center">HERE IS ALL THE LIST OF THE RECORDS OF roomS</h2>
  <table class="table table-striped table-dark table-hover text-center col-md-10 offset-md-1">
  <tr>
    <th>#</th>
    <th>room</th>
    <th colspan="3">FUNCTIONS</th>
  </tr>
 
  <% @room.each do |room| %>
    <tr>
      <td><%= room.id %></td>
      <td><%= room.room %></td>
       <td><%= link_to 'Show', clerk_room_path(room), method: :GET %></td>
        <td><%= link_to 'Edit', edit_clerk_room_path(room) %></td>
        <td><%= link_to 'Destroy', clerk_room_path(room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
<br>
  <div class="row text-center ">  
    <div class="col-md-1"> 
      <%= link_to 'BACK', welcome_index_path,class: "btn btn-outline-dark btn-lg " %>
    </div>
  </div>
</div>
